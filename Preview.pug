html
	head
		style
			include Style.css

		style.
			/* Preview Styles */
			body {
				width: 735px;
				padding: 5px;
				margin: 0;
			}

			div.preview-front,
			div.preview-back {
				box-sizing: border-box;
				display: inline-block;
				position: relative;

				width: 360px;
				height: 640px;

				padding: 0 20px 20px;
				margin: 0 5px 5px 0;

				background: #fff;
				border: #000 1px solid;
				box-shadow: rgba(0, 0, 0, 0.3) 1px 1px 2px;
			}

			div.preview-offset {
				margin-top: -5px;
			}

	body
		for preview in previews
			div.preview-set
				div.preview-front
					div.preview-offset
						div.card
							| !{preview.front}

				div.preview-back
					div.preview-offset
						div.card
							| !{preview.back}

	script
		| document.body.classList.add(window.location.hash.substring(1))
