include ../Template
+card
	ac-question
		div.paragraph.question= field('Question')

	ac-answer
		hr
		h2 Answer:
		div.paragraph.answer= field('Correct')

		+if-field-exists('Explanation')
			hr
			h2 Explanation:
			div.paragraph.explanation= field('Explanation')


